-#  This file is app/views/movies/search_tmdb.html.haml
%h1 The following movies containing '#{@search_terms}' were found in TMDb

=form_tag 'add_tmdb', :method => :post, :id => 'add_form' do

  %table#movies
    %thead
      %tr
        %th Movie Title
        %th Rating
        %th Release Date
        %th Select
    %tbody
      - @movies.each do |movie|
        %tr
          %td= movie[:title] 
          %td= movie[:rating]
          %td= movie[:release_date]
          %td=check_box_tag "tmdb_movies[#{movie[:tmdb_id]}]", nil, nil, :id => "checkbox_#{movie[:tmdb_id]}"
          
          
  = submit_tag 'Add Selected Movies', :id =>"search_button"
      
      
  